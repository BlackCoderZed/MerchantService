
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

<h5>Password</h5>

@using (Html.BeginForm("ChangePassword", "Portal", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col s12 m6 l6">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <input type="password" name="oldpasswd" placeholder="Current Password" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <input type="password" name="newpasswd" placeholder="New Password" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <input type="password" name="confirmpasswd" placeholder="Confirm Password" required />
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <input type="submit" value="Change" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@{ 
    if(TempData["PasswdChange"]!=null)
    {
        <p style="color:blue">@TempData["PasswdChange"]</p>
    }

    if(TempData["PasswdError"]!=null)
    {
        <p style="color:red">@TempData["PasswdError"]</p>
    }

    TempData.Clear();
}