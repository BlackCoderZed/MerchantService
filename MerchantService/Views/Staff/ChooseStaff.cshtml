@model IEnumerable<MerchantService.Models.mStaff>
@using GridMvc.Html
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChooseStaff</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
    <script>
        function setstaffinfo(staffid,staffname,department,office)
        {
            //alert(staffid);
            window.opener.setStaffID(staffid,staffname,department,office);
            window.close();
        }   
    </script>
</head>
<body>
    <div class="container-fluid">

        <div class="row">
            <div class="col s12 m12 l12" style="height:400px;overflow:auto;">
                @Html.Grid(Model).Columns(columns =>
                {
                    columns.Add(foo => foo.StaffID).Titled("ID").Sortable(true).Filterable(true).SetWidth(110);
                    columns.Add(foo => foo.StaffName).Titled("Name").Sortable(true).Filterable(true);
                    columns.Add(foo => foo.Department).Sortable(true).Filterable(true);
                    columns.Add(foo => foo.Office).Sortable(true).Filterable(true);
                    columns.Add().Encoded(false).Sanitized(false).SetWidth(50).RenderValueAs(foo => Html.ActionLink("Select", null, null, new { @class = "waves-effect",@onclick= "setstaffinfo('" + foo.StaffID+"','"+foo.StaffName+"','"+foo.Department+"','"+foo.Office+"');" }));
               //columns.Add().Encoded(false).Sanitized(false).SetWidth(50).RenderValueAs(foo => Html.ActionLink("Edit", "Update", new { staffid = foo.StaffID }, new { @class = "waves-effect" }));
               //columns.Add().Encoded(false).Sanitized(false).SetWidth(50).RenderValueAs(foo => Html.ActionLink("Delete", "Delete", new { id = foo.MPU_Merchant_ID }, new { @class = "waves-effect" }));
                }).WithPaging(7)
            </div>
        </div>
    </div>
</body>
</html>
