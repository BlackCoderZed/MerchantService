@model IEnumerable<MerchantService.Models.mUser>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h5>User Accounts</h5>

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/scripts/jquery-ui.js"></script>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container-fluid">

    <div class="row">
        <div class="col s12 m12 l12" style="height:400px;overflow:auto;">
            @Html.Grid(Model).Columns(columns =>
       {
           columns.Add(foo =>foo.StaffID).Titled("ID").Sortable(true).Filterable(true).SetWidth(110);
           columns.Add(foo => foo.StaffName).Titled("Name").Sortable(true).Filterable(true);
           columns.Add(foo => foo.Department).Sortable(true).Filterable(true);
           columns.Add(foo => foo.Office).Sortable(true).Filterable(true);
           columns.Add(foo => foo.UserID).Titled("User ID").Sortable(true).Filterable(true);
           columns.Add(foo => foo.UserLevel).Titled("User Level").Filterable(true);
           columns.Add(foo => foo.AdminLogin).Titled("Admin Right").Filterable(true);
           columns.Add().Encoded(false).Sanitized(false).SetWidth(50).RenderValueAs(foo => Html.ActionLink("Reset", "Reset", new { uid = foo.UserID }, new { @class = "waves-effect" }));
           columns.Add().Encoded(false).Sanitized(false).SetWidth(50).RenderValueAs(foo => Html.ActionLink("Edit", "Edit", new { uid = foo.UserID }, new { @class = "waves-effect" }));
           //columns.Add().Encoded(false).Sanitized(false).SetWidth(50).RenderValueAs(foo => Html.ActionLink("Disable", "Disable", new { uid = foo.UserID }, new { @class = "waves-effect" }));
           //columns.Add().Encoded(false).Sanitized(false).SetWidth(50).RenderValueAs(foo => Html.ActionLink("Delete", "Delete", new { id = foo.MPU_Merchant_ID }, new { @class = "waves-effect" }));
       }).WithPaging(7)
        </div>
    </div>
</div>
